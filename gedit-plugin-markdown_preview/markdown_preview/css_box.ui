<?xml version="1.0" encoding="UTF-8"?>
<interface domain="gedit-plugin-markdown-preview">

  <object class="GtkBox" id="css_box">
    <property name="visible">True</property>
    <property name="orientation">vertical</property>
    <property name="spacing">16</property>
    <child>
      <object class="GtkBox">
        <property name="visible">True</property>
        <property name="orientation">horizontal</property>
        <property name="spacing">16</property>
        <child>
          <object class="GtkLabel">
            <property name="visible">True</property>
            <property name="label" translatable="yes">Use a stylesheet</property>
          </object>
        </child>
        <child>
          <object class="GtkSwitch" id="switch_css">
            <property name="visible">True</property>
            <property name="active">True</property>
          </object>
          <packing>
            <property name="pack-type">end</property>
          </packing>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="css_sensitive_box">
        <property name="visible">True</property>
        <property name="orientation">horizontal</property>
        <property name="spacing">16</property>
        <child>
          <object class="GtkLabel">
            <property name="visible">True</property>
            <property name="label" translatable="yes">CSS file:</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="file_chooser_btn_css">
            <property name="visible">True</property>
            <property name="tooltip_text" translatable="yes">Select a CSS file</property>
            <child>
              <object class="GtkBox">
                <property name="visible">True</property>
                <property name="spacing">8</property>
                <child>
                  <object class="GtkLabel" id="style_label">
                    <property name="visible">True</property>
                    <property name="label" translatable="yes">Select a CSS file</property>
                  </object>
                </child>
                <child>
                  <object class="GtkImage">
                    <property name="visible">True</property>
                    <property name="icon-name">document-open-symbolic</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
          <packing>
            <property name="pack-type">end</property>
          </packing>
        </child>
      </object>
    </child>
  </object>

</interface>
